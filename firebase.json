{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "packages/mepop-frontend/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [{
      "source": "**",
      "destination": "/index.html"
    }],
    "predeploy": [
      "npm --prefix ./packages/mepop-frontend run build"
    ],
    "headers":
      [ {
        "source": "**/*.@(js|ts)",
        "headers": [ 
            {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
            }
          ]
        }
      ]
  },
  "emulators": {
    "functions": {
      "port": "4001"
    },
    "hosting": {
      "port": "4002"
    }
  }
}
